<section class="admin-products-index">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

<div class="panel panel-default products">

    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>
            <b>Total number of <%= link_to "categories", "/admin/categories" %>:</b>
            <br>
          </td>
          <td>
            <%= @category_total %>
          </td>
        </tr>
        <tr>
          <td>
            <b>Total number of unique <%= link_to "products", "/admin/products" %>:</b>
            <br>
          </td>
          <td>
            <%= @plant_total %>
          </td>
        </tr>
      </tbody>
    </table>

  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Category</th>
          <th>Number of products</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <%= render 'category', category: category  %>
        <% end %>
      </tbody>
    </table>

  </div>

  <div class="panel panel-default products">

    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Category</th>
          <th>Price</th>
          <th>Qty Remaining</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <%= render 'product', product: product %>
        <% end %>
      </tbody>
    </table>

  </div>


</section>
